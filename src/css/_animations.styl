/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
    max-height 0
    padding 0 !important
    transform translateX(-120%)
    transition 500ms
    &.order-enter-active
        max-height 60px
        padding 2rem 0 !important
        transform translateX(0)


.order-exit
    transform translateX(0)
    transition 500ms
    &.order-exit-active
        padding 0
        transform translateX(120%)


.count-enter
    transform translateY(100%)
    transition 5s
    &.count-enter-active
        background yellow 
        transform translateY(0)

.count-exit
    transform translateY(0)
    transition 2s
    position absolute
    bottom 0
    left 0
    &.count-exit-active
        transform translateY(-100%)